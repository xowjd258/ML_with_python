# -*- coding: utf-8 -*-
# UTF-8 encoding when using korean

class Customer:
	welcome = "반갑습니다"
	
	def __init__(self, id):
		self.id= id
		print("id= %s"%self.id)
		
mycustomer= Customer("sex") #인스턴스 생성
print("mycustomer 인스턴스 생성") 
print("변수확인 : %s"%mycustomer.welcome) #클래스 안의 변수를 불러올때나
print("메소드확인 %s"%mycustomer.id)#메소드안의 변수를 불러올 때에도 똑같이 인스턴스.변수의 형식을 취한다.
